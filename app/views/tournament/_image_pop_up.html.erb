<% if image.is_a?(String) %>
  <%= vite_image_tag(image) %>
<% else %>
<div x-data="{ show_image: false }">
  <div class="flex w-full h-full justify-center">
    <button type="button" class="overflow-hidden content-center w-full" x-on:click="show_image = true">
      <%= image_tag(image, class: "object-contain w-full h-full") %>
    </button>
  </div>
  <template x-if="show_image">
    <div x-on:click="show_image = false" class="z-50 fixed top-0 left-0 right-0 h-screen w-full flex place-content-center bg-gray-600/80">
      <div class="flex flex-col place-content-center h-full rounded">
        <%= image_tag(image, class: "object-contain max-h-full max-w-full self-center") %>
      </div>
    </div>
  </template>
</div>

<% end %>
